<!--====================================================================== 

  Svc 
  ComLogger
  Commands

======================================================================-->

<commands>

  <command kind="async" opcode="0x00" mnemonic="CloseFile">
    <comment>Forces a close of the currently opened file.</comment>
  </command>
  <command kind="async" opcode="0x01" mnemonic="StopLogging">
    <comment>Forces a close of the currently opened file, stops opening new file.</comment>
  </command>
  <command kind="async" opcode="0x02" mnemonic="StartLogging">
    <comment>Allows opening new file after stop.</comment>
  </command>
  <command kind="async" opcode="0x03" mnemonic="SetRecordName">
    <comment>Set a name to be added after the file prefix.</comment>
    <args>
      <arg name="recordName" type="string" size = "80"/>
    </args>
  </command>

</commands>